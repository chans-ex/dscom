    <!-- Top Button -->
    <button class="top-button" id="topButton" onclick="scrollToTop()">↑</button>

    <script>
        // 컴포넌트 표시/숨김 관리
        function toggleComponent(componentName, isVisible) {
            const component = document.querySelector(`[data-component="${componentName}"]`);
            if (component) {
                component.setAttribute('data-component-visible', isVisible);
            }
        }

        // 스크롤 이벤트
        let lastScrollTop = 0;
        const header = document.querySelector('.header');
        const topButton = document.getElementById('topButton');

        window.addEventListener('scroll', function() {
            const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
            
            // Top 버튼 표시/숨김
            if (scrollTop > 200) {
                topButton.classList.add('show');
            } else {
                topButton.classList.remove('show');
            }

            // 헤더 숨김/표시 (스크롤 방향에 따라)
            if (scrollTop > lastScrollTop && scrollTop > 100) {
                header.style.transform = 'translateY(-100%)';
            } else {
                header.style.transform = 'translateY(0)';
            }
            
            lastScrollTop = scrollTop;
        });

        // 검색 기능
        function handleSearch(event) {
            event.preventDefault();
            const query = event.target.querySelector('.search-input').value;
            if (query) {
                alert(`"${query}" 검색 결과 페이지로 이동 (데모)`);
            }
        }

        // 메뉴 기능
        function openMenu() {
            alert('전체 메뉴 기능은 데모용입니다.');
        }

        // 상단으로 스크롤
        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        }

        // 카테고리 탭 전환
        function switchCategory(tab) {
            // 모든 탭에서 active 제거
            tab.parentElement.querySelectorAll('.category-tab').forEach(t => t.classList.remove('active'));
            // 클릭된 탭에 active 추가
            tab.classList.add('active');
        }

        // 랭킹 탭 전환
        function switchRanking(tab) {
            // 모든 탭에서 active 제거
            tab.parentElement.querySelectorAll('.category-tab').forEach(t => t.classList.remove('active'));
            // 클릭된 탭에 active 추가
            tab.classList.add('active');
        }

        // 랭킹 더보기 토글
        function toggleRanking() {
            const items = document.querySelectorAll('.ranking-item.collapsed');
            const btn = document.querySelector('.ranking-more-btn');
            
            if (items[0].style.display === 'flex' || items[0].style.display === '') {
                items.forEach(item => item.style.display = 'none');
                btn.textContent = '더보기';
            } else {
                items.forEach(item => item.style.display = 'flex');
                btn.textContent = '접기';
            }
        }

        // 기사 보기
        function viewArticle(id) {
            alert(`기사 ${id}번 상세 페이지로 이동 (데모)`);
        }

        // 이벤트 보기
        function viewEvent(eventId) {
            alert(`이벤트 "${eventId}" 상세 페이지로 이동 (데모)`);
        }

        // 클릭 효과
        document.addEventListener('DOMContentLoaded', function() {
            // 콘텐츠 아이템 클릭 효과
            document.querySelectorAll('.content-item, .news-item, .ranking-item').forEach(item => {
                item.addEventListener('click', function() {
                    this.style.backgroundColor = '#f8f9fa';
                    this.style.transform = 'scale(0.98)';
                    setTimeout(() => {
                        this.style.backgroundColor = '';
                        this.style.transform = '';
                    }, 200);
                });
            });

            // 관리자 모드 시뮬레이션 (콘솔에서 테스트 가능)
            window.adminMode = {
                hideComponent: function(componentName) {
                    toggleComponent(componentName, 'false');
                    console.log(`Component "${componentName}" hidden`);
                },
                showComponent: function(componentName) {
                    toggleComponent(componentName, 'true');
                    console.log(`Component "${componentName}" shown`);
                },
                listComponents: function() {
                    const components = document.querySelectorAll('[data-component]');
                    console.log('Available components:');
                    components.forEach(comp => {
                        const name = comp.getAttribute('data-component');
                        const visible = comp.getAttribute('data-component-visible');
                        console.log(`- ${name}: ${visible === 'true' ? 'visible' : 'hidden'}`);
                    });
                }
            };
        });
    </script>
</body>
</html>
